{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ab360",
  "version": "0.1.0",
  "identifier": "com.ab360.app",
  "build": {
    "beforeDevCommand": "cd D:\\Gen_AI_Poc\\ab360\\frontend && npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd D:\\Gen_AI_Poc\\ab360\\frontend && npm run build && cd D:\\Gen_AI_Poc\\ab360\\backend && poetry run pyinstaller ab360_backend.spec --clean",
    "frontendDist": "../frontend/dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../backend/dist/ab360-backend.exe"
    ]
  },
  "app": {
    "windows": [
      {
        "title": "ab360",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "sidecar": true
    }
  }
}
